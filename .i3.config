exec_always --no-startup-id compton -b --config ~/.config/compton/compton.conf
exec_always --no-startup-id xautolock -time 10 -locker /home/adam/bin/lock -corners ----
exec_always --no-startup-id xset dpms 0 0 0

exec_always feh --bg-scale ~/wallpaper/glowing-jellyfish_3840x1600.jpg
